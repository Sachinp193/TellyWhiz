{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build-frontend",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": { 
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts" 
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "regions": ["iad1"]
}
