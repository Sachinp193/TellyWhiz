{
  "version": 2,

  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/index.ts": { // CHANGED THIS LINE: From "server/index.ts" to "api/index.ts"
      "runtime": "@vercel/node@3.0.0",
      "memory": 1024,
      "maxDuration": 30
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts" // CHANGED THIS LINE: From "/server/index.ts" to "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}